{
    automerge: true,
    platformAutomerge: true,
    automergeType: "pr",
    commitMessage: "bump({{depName}}): update to {{prettyNewVersion}}",
    separateMajorMinor: false,
    prHourlyLimit: 0,
    prConcurrentLimit: 0,
    branchConcurrentLimit: 0,
    rebaseWhen: "conflicted",
    regexManagers: [
        {
            fileMatch: "package\\.yaml$",
            matchStringsStrategy: "combination",
            matchStrings: [
                "# renovate:.*versioning=(?<versioning>[^,\n]+)",
                "# renovate:.*datasource=(?<datasource>[^,\n]+)",
                "pkg:github\\/(?<depName>.+)@(?<currentValue>[^\\s]+)"
            ],
            datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
            versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
        },
        {
            fileMatch: "package\\.yaml$",
            matchStringsStrategy: "combination",
            matchStrings: [
                "\\?.*repository_url=(?<githubRepo>https:\\/\\/github\\.com)",
                "pkg:cargo\\/(?<depName>.+)@(?<currentValue>[^\\s]+)"
            ],
            datasourceTemplate: "{{#if githubRepo}}github-tags{{else}}crate{{/if}}",
            // In cargo versioning, "1.2.3" doesn't mean "exactly 1.2.3" but rather ">=1.2.3 <2.0.0".
            // We on the other hand do want to treat versions as fixed - so we change versioning strategy.
            versioningTemplate: "semver",
        },
        {
            fileMatch: "package\\.yaml$",
            matchStrings: [
                "pkg:golang\\/(?<depName>.+)@(?<currentValue>.+)"
            ],
            datasourceTemplate: "go",
        },
        {
            fileMatch: "package\\.yaml$",
            matchStrings: [
                "pkg:gem\\/(?<depName>.+)@(?<currentValue>.+)"
            ],
            datasourceTemplate: "rubygems",
        },
        {
            fileMatch: "package\\.yaml$",
            matchStrings: [
                "pkg:(?<datasource>npm|pypi)\\/(?<depName>.+)@(?<currentValue>.+)"
            ],
            datasourceTemplate: "{{datasource}}",
        },
    ],
}
